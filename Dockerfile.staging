# Staging: Uses staging nginx config, no .env file
FROM php:8.5-fpm-alpine3.22 AS php-base

RUN apk update && apk upgrade && apk add --no-cache \
    build-base \
    autoconf \
    make \
    gcc \
    g++ \
    libc-dev \
    file \
    re2c \
    git \
    curl \
    unzip \
    zip \
    libpng-dev \
    oniguruma-dev \
    libxml2-dev \
    linux-headers \
    icu-dev \
    && docker-php-ext-install pdo_mysql mbstring exif pcntl bcmath gd sockets intl \
    && curl -sS https://getcomposer.org/installer | php -- --install-dir=/usr/bin --filename=composer \
    && apk del build-base autoconf make gcc g++ libc-dev file re2c \
    && rm -rf /var/cache/apk/*

WORKDIR /var/www

# ---------- Composer deps ----------
FROM php-base AS vendor

COPY composer.json composer.lock ./
RUN composer install --no-dev --optimize-autoloader --no-scripts --ignore-platform-reqs

# Copy only necessary files for dependencies caching
COPY app/ ./app/
COPY bootstrap/ ./bootstrap/
COPY config/ ./config/
COPY database/ ./database/
COPY lang/ ./lang/
COPY public/ ./public/
COPY resources/ ./resources/
COPY routes/ ./routes/
COPY storage/ ./storage/
COPY artisan ./
# Staging: .env not copied (uses environment variables)

RUN composer dump-autoload --optimize

# ---------- Frontend build ----------
FROM node:25.4.0-alpine3.22 AS node-build

WORKDIR /var/www

COPY package.json package-lock.json ./
RUN npm ci

# Copy only necessary files for building assets
COPY resources/ ./resources/
COPY public/ ./public/
COPY lang/js/ ./lang/js/
COPY vite.config.js ./

RUN npm run build

# ---------- PHP runtime ----------
FROM php-base AS app

WORKDIR /var/www

COPY --from=vendor /var/www /var/www
COPY --from=node-build /var/www/public/build /var/www/public/build

COPY docker/php/custom.ini /usr/local/etc/php/conf.d/custom.ini

# Ensure PHP-FPM listens on 0.0.0.0 to receive connections from Nginx in another container
RUN sed -i 's/^listen = .*/listen = 0.0.0.0:9000/' /usr/local/etc/php-fpm.d/www.conf 2>/dev/null || \
    sed -i 's/^listen = .*/listen = 0.0.0.0:9000/' /usr/local/etc/php-fpm.d/zz-docker.conf 2>/dev/null || true

RUN chown -R www-data:www-data /var/www \
    && chmod -R 755 /var/www \
    && chmod -R 775 /var/www/storage \
    && chmod -R 775 /var/www/bootstrap/cache

USER www-data

CMD ["php-fpm"]

# ---------- Nginx ----------
FROM nginx:mainline-alpine3.22-perl AS web

WORKDIR /var/www

# Staging: nginx config points to app-staging service
COPY docker/nginx/staging/default.conf /etc/nginx/conf.d/default.conf
COPY --from=app /var/www/public /var/www/public
